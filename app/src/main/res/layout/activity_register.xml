<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="@mipmap/login_background"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/rg_tellphone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/tg_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_tellphone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="输入密码"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/rg_repassword"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tg_password"
            android:layout_alignStart="@+id/rg_tellphone"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="确认密码"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/rg_code"
            android:layout_width="166dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/rg_repassword"
            android:layout_alignStart="@+id/rg_tellphone"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="获取验证码"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/rg_code_btn"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/rg_code"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/rg_code"
            android:layout_toRightOf="@+id/rg_code"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/gain" />

        <Button
            android:id="@+id/rg_register_btn"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/register_btn_selector"
            android:text="注册"
            android:textColor="@color/colorfont"
            android:textSize="20dp" />

    </RelativeLayout>


</LinearLayout>