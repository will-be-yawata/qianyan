<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Matching.Seek_loadingActivity"
    android:background="#d2f1ff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/cancel_btn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/cancel" />


        <ImageView
            android:id="@+id/icon3"
            android:layout_width="274dp"
            android:layout_height="274dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="150dp"
            app:srcCompat="@mipmap/icon3" />

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_below="@+id/seek_loading_user"
            android:layout_marginTop="-22dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:layout_toStartOf="@+id/seek_loading_user"
            android:layout_toLeftOf="@+id/seek_loading_user"
            app:srcCompat="@mipmap/icon1" />

        <ImageView
            android:id="@+id/icon7"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/icon7" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/seek_loading_user"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="-27dp"
            android:layout_toEndOf="@+id/seek_loading_user"
            android:layout_toRightOf="@+id/seek_loading_user"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/icon2" />

        <ImageView
            android:id="@+id/icon5"
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:layout_above="@+id/seek_loading_user"
            android:layout_alignEnd="@+id/icon3"
            android:layout_alignRight="@+id/icon3"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="62dp"
            app:srcCompat="@mipmap/icon5" />
        <ImageView
            android:id="@+id/seek_loading_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/user" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/seek_loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匹配中...." />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>