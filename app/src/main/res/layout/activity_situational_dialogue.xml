<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    tools:context=".activity.Matching.Situational_dialogueActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="#e67"
        >
        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
            android:id="@+id/videoPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/tip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/gai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="该"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/gai"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-24dp"
                android:layout_toEndOf="@+id/gai"
                android:text="你"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/shuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ni"
                android:layout_marginStart="11dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/ni"
                android:text="说"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shuo"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-31dp"
                android:layout_toEndOf="@+id/shuo"
                android:text="话"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/la"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hua"
                android:layout_marginStart="14dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/hua"
                android:text="啦"
                android:textColor="#000"
                android:textSize="20dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="您扮演的角色"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:background="#90f8f7"
            android:text="小强" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"

            android:scaleType="centerInside"
            android:padding="6dp"
            android:background="@drawable/phone_bg"
            android:src="@mipmap/phone"/>

    </RelativeLayout>

</LinearLayout>