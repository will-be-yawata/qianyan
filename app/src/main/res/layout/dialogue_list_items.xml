<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/global_relative">
    <LinearLayout
        android:id="@+id/list_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c9f2f9">
    <ImageView
        android:id="@+id/list_pho"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:textSize="18dp"
                android:text="鲁滨逊漂流" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="28dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="2dp"
                android:layout_toStartOf="@+id/people_online"
                android:src="@mipmap/people_dot" />

            <TextView
                android:id="@+id/people_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="19dp"
                android:text="123145" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/list_relative"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:visibility="gone"
        >

    <Button
        android:id="@+id/list_confirm"
        android:layout_width="wrap_content"
        android:layout_height="36dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="#53e4f8"
        android:text="开始匹配" />


</RelativeLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/list_linearlayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:background="#e1e1e1" />

</RelativeLayout>