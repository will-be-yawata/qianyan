<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <RelativeLayout
        android:id="@+id/delete_tip"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="删除好友并同时删除该好友的所有信息"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#8a8a8a"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadade"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text3"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/delete_friend_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_below="@+id/delete_tip">

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除联系人"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#d81e06"/>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#dadade"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text4"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/delete_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clickable="true"
        android:layout_below="@+id/delete_friend_btn">

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorfont"/>

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadade"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text5"/>

    </RelativeLayout>


</RelativeLayout>