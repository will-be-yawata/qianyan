<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyPage.MyCourse.Recently_readFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/recently_read_pho"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@mipmap/user" />

        <TextView
            android:id="@+id/recently_read_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/recently_read_pho"
            android:layout_toRightOf="@+id/recently_read_pho"
            android:text="十万个为什么？" />
    </RelativeLayout>
</LinearLayout>